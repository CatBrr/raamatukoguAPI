doctype html
html
  head
    title Raamatukogu avaleht
    link(rel="stylesheet", href="css/style.css")
    meta(name="viewport" content="width=device-width, initial-scale=1")
  body
    main
      block header
        header.header
          h1 Raamatukogu
        if IsLogin
          block content
            div(class="form-signin")
              p head päeva #{username}!
              a.btn(href="/logout") Logi valja
        else  
          block content
            div(class="form-signin") 
              a.btn(href="/login") Logi sisse
      block content
      div#postform
        h2 Lissa uue raamat
        form(action="/books/", method="POST" )
          label(for="title", class="has-dynamic-label") | Title:
          input#title(type="text", name="title",required )
          label(for="author", class="has-dynamic-label") | Author:
          input#author(type="text", name="author",required)
          label(for="price", class="has-dynamic-label") | Price:
          input#price(type="number",step=0.010 name="price",required)
          br
          br
          button(type="submit") lisa uus
      div.table-wrapper
      table.fl-table
        th Nimetus
        th Autor
        th Hind
        each ram in ramList
            tr
                td= ram.title
                td= ram.author
                td= ram.price +' €'
                td 
                  if IsLogin
                    a.btn( href="/books/"+ram.id+'/delete') kustuta
                td 
                  if IsLogin
                    button.btn(onclick="show_hide("+ram.id+")", id="bnt"+ram.id) muuda andmet
                    form(action="/books/"+ram.id+"/edit", method="POST", style="display: none;", id="editform"+ram.id )
                      label(for="title", class="has-dynamic-label") Title:
                      input#title(type="text", name="title",value=ram.title,required )
                      br
                      label(for="author", class="has-dynamic-label") Author:
                      input#author(type="text", name="author",value=ram.author,required)
                      br
                      label(for="price", class="has-dynamic-label") Price:
                      input#price(type="number",step=0.010 name="price",value=ram.price,required)
                      br
                      button.btn(type="submit") muuda
        script(src="js/funk.js")
                  
